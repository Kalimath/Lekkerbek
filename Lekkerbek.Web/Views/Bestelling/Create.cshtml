@model Lekkerbek.Web.Models.Bestelling

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Bestelling</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Leverdatum" class="control-label"></label>
                <input asp-for="Leverdatum" class="form-control" />
                <span asp-validation-for="Leverdatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opmerkingen" class="control-label"></label>
                <input asp-for="Opmerkingen" class="form-control" />
                <span asp-validation-for="Opmerkingen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AantalMaaltijden" class="control-label"></label>
                <input asp-for="AantalMaaltijden" class="form-control" />
                <span asp-validation-for="AantalMaaltijden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KlantNaam" class="control-label"></label>
                <select asp-for="KlantNaam" class="form-control" asp-items="ViewBag.KlantNamen"></select>
            </div>
            <div class="form-group">
                <label asp-for="GerechtenLijst" class="control-label"></label>
                <select asp-for="GerechtenLijst" class="form-control" asp-items="ViewBag.AlleGerechten" multiple="multiple"></select>
            </div>
            <div>
                <asp:ListBox runat="server" ID="lbGerechten" SelectionMode="multiple">
                    @foreach (var gerecht in ViewBag.AlleGerechten)
                    {
                        <asp:ListItem Text="gerecht.Naam" Value="gerecht.Naam"/>
                    }
                </asp:ListBox>
                <br />
                <asp:Button runat="server" id="btnSelect" Text="Select all itesm" OnClick="btnSelect_Click" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
