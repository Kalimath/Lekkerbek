@model Lekkerbek.Web.Models.Bestelling

@{
    ViewData["Title"] = "WijzigTijdslot";
}

<h1>WijzigTijdslot</h1>

<h4>Bestelling</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WijzigTijdslot">
            <div>
                @ViewBag.HuidigTijdslot
            </div>
            <div class="form-group">
                <label asp-for="Tijdslot" class="control-label"></label>
                <select asp-for="Tijdslot" class="form-control" asp-items="ViewBag.Tijdslot"></select>
            </div>

            <div class="form-group">
                <input asp-action="WijzigTijdslot" asp-route-tijdslotid="@Context.Request.Query["tijdslotid"]" type="submit" value="Save" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

