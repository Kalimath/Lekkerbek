
@using Lekkerbek.Web.Models.Identity
@model IEnumerable<Lekkerbek.Web.Models.Kalender.OpeningsUur>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <img src="/img/menu.jpg" alt="menukaart" />

</div>
<div class="text-center">
    <a asp-controller="Bestelling" asp-action="Create" class="btn btn-primary">Maak een bestelling</a>
</div>
@*<div class="text-center">
        <a asp-controller="Home" asp-action="OpeningsUur" class="btn btn-primary">OpeningsUren</a>
    </div>*@

<h4>Openingsuren</h4>
@if (User.IsInRole(RollenEnum.Admin.ToString()))
{
    <p>
        <a asp-controller="OpeningsUur" asp-action="Index">Kalender beheren</a>
    </p>
}
<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uur)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Datum)
        </td>*@
            
        </tr>
        }
    </tbody>
</table>

