@model IEnumerable<Lekkerbek.Web.ViewModels.OpeningsUur.AlleKoksOpDagViewModel>

@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Koks</h1>


<table class="table" id="usersTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gebruikersnaam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Gebruikersnaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                <a class="btn btn-dark" asp-action="IsZiekOfOpVerlof" asp-route-id="@item.Id" >Is Ziek/Op Verlof</a>
            </td>
        </tr>
        }
    </tbody>

</table>
