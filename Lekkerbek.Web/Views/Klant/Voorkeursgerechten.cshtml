@model IEnumerable<Lekkerbek.Web.Models.Voorkeursgerechten>

@{
    ViewData["Title"] = "Voorkeursgerechten";
}

<h1>Voorkeursgerechten</h1>

<p>
    <a asp-action="Create" asp-controller="Voorkeursgerechtens">Voeg gerecht toe</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GerechtId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klant.Naam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GerechtId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
